<div>
<%= flash[:notice] %>
</div>
<div class = "container">
<div class = "row">
    <div class = "col-md-3">
      <%= render 'index', book: @newbook, user: @user  %>
    </div>
    <div class = "col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
    <tr>
    <th>
      <%= link_to user_path(@book.user) do %>
      <%= image_tag current_user.get_profile_image %>
      <br><%= @user.name %>
      <% end %>




    </th>

      <th><%= @book.title %></th>
      <th><%= @book.body %></span></th>
      <!--<div class = "container">-->
          <% if @book.user == current_user %>
      <th><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm-block" %></th>
      <th><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger btn-sm-block" %></th>
      
      <% end %>
    </tr>
    </table>
    <!--</div>-->
  </div>
</div>
</div>